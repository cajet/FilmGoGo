<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fafafa">
        <TextView
            android:id="@+id/title_movie_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17sp"
            android:textColor="@color/titleTextDark"
            android:text="我的电影票"
            android:gravity="center"/>
        <ImageView
            android:paddingLeft="15dp"
            android:id="@+id/id_description_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_left_red"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#d7d7d7"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:background="#756857">
                <ImageView
                    android:id="@+id/iv_movie_img"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie_default"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/iv_movie_img">
                    <TextView
                        android:id="@+id/id_description_movie_name"
                        android:text="暂无电影"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:layout_marginBottom="10dp"
                        android:textSize="20sp"
                        android:textColor="#ffb400"/>
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="暂无类别"/>
                    <TextView
                        android:id="@+id/tv_actor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:text="暂无演员"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/id_description_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_actor"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/normalTextDark"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lineGrey"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/mainBack" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lineGrey"/>
            <ListView
                android:id="@+id/id_select_movie_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_description_content">
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>